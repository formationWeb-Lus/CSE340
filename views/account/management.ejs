<main class="account-management">

  <!-- PAGE TITLE -->
  <h1 class="page-title"><%= title %></h1>

  <!-- UPDATE ACCOUNT LINK (SOUS LE TITRE) -->
  <div class="action-box">
    <a
      class="action-link"
      href="/account/update/<%= accountData.account_id %>">
      Update Account Information
    </a>
  </div>

  <!-- FLASH MESSAGE -->
  <% if (messages.notice) { %>
    <div class="notice">
      <%= messages.notice %>
    </div>
  <% } %>

  <!-- GREETING -->
  <h2 class="welcome">
    Welcome <%= accountData.account_firstname %>
  </h2>

  <!-- INVENTORY MANAGEMENT (EMPLOYEE / ADMIN ONLY) -->
  <% if (
    accountData.account_type === "Employee" ||
    accountData.account_type === "Admin"
  ) { %>

    <section class="inventory-section">
      <h3>Inventory Management</h3>

      <div class="action-box">
        <a class="action-link" href="/inv">
          Manage Inventory
        </a>
      </div>
    </section>

  <% } %>

</main>
