<h1>Edit Inventory</h1>

<% if (errors) { %>
  <ul class="error-list">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="updateForm" action="/inv/update" method="post">
  <label>Make</label>
  <input type="text" name="inv_make" required value="<%= inv_make || '' %>">

  <label>Model</label>
  <input type="text" name="inv_model" required value="<%= inv_model || '' %>">

  <label>Year</label>
  <input type="number" name="inv_year" required value="<%= inv_year || '' %>">

  <label>Description</label>
  <textarea name="inv_description" required><%= inv_description || '' %></textarea>

  <label>Image Path</label>
  <input type="text" name="inv_image" required value="<%= inv_image || '/images/vehicles/no-image.png' %>">

  <label>Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" required value="<%= inv_thumbnail || '/images/vehicles/no-image.png' %>">

  <label>Price</label>
  <input type="number" name="inv_price" required value="<%= inv_price || '' %>">

  <label>Miles</label>
  <input type="number" name="inv_miles" required value="<%= inv_miles || '' %>">

  <label>Color</label>
  <input type="text" name="inv_color" required value="<%= inv_color || '' %>">

  <label>Classification</label>
  <!-- Injecte le HTML des options directement -->
  <%- classificationSelect %>

  <!-- Bouton désactivé jusqu'au changement -->
  <button type="submit" disabled>Update Vehicle</button>

  <!-- Champ caché pour inv_id -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">
</form>

<!-- Lien vers le JS qui active le bouton quand le formulaire change -->
<script src="/js/inv-update.js"></script>
